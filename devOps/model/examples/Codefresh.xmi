<?xml version="1.0" encoding="UTF-8"?>
<devOps:Pipeline
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:devOps="http://www.example.org/devOps"
    Name0="Codefresh">
  <when Trigger="master"/>
  <job Name1="clone"
      Description1="Cloning repository">
    <tool_framework_job
        Name5="docker_image"/>
    <command>
      <tool
          Name5="npm install gulp"/>
    </command>
    <command>
      <tool
          Name5="npm install"/>
    </command>
  </job>
  <job Name1="build"
      Description1="Building Docker image">
    <ifthenelse
        Condition="branch = 1"/>
    <environment
        Key="ENV"
        Value="SECRET"/>
  </job>
</devOps:Pipeline>
