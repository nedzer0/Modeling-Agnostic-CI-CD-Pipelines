<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="GitHubActions">
    <property name="ECLIPSE_HOME" value="../../.."/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="GitHubActions.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/GitHubActions/bin"/>
    </path>

    <path id="GitHubActions.classpath">
        <path refid="GitHubActions.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="GitHubActions.libraryclasspath.alljars">
        <pathelement location="../GitHubActions/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="GitHubActions.classpath.alljars">
        <path refid="GitHubActions.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="GitHubActions2.main.Generate" classpathref="GitHubActions.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="GitHubActions2.main.Generate" classpathref="GitHubActions.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
